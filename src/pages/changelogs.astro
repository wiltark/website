---
import StarlightPage from "@astrojs/starlight/components/StarlightPage.astro";

const getCommits = async () => {
  const response = await fetch(
    `https://api.github.com/repos/aoijs/aoi.js/commits?per_page=100`
  );
  const data = await response.json();
  return data.map((commit: any) => ({
    date: new Date(commit.commit.author.date),
    message: commit.commit.message,
    avatar: commit.author ? commit.author.avatar_url : "",
    author: commit.author ? commit.author.login : "",
    link: commit.html_url,
  }));
};

const log = await getCommits();
---

<StarlightPage
  frontmatter={{
    title: "Changelogs",
    description: "These are the latest changes made to the aoi.js repository.",
    tableOfContents: false,
  }}
>
  <div class="commit-list">
    {
      log.map((entry: any) => (
        <a href={entry.link} target="_blank" rel="noopener noreferrer">
          <div
            class={`commit-card ${entry.message.includes("bump") ? "bump-card" : ""} ${entry.message.includes("feat") || entry.message.includes("#") ? "feat-card" : ""} ${entry.message.includes("fix") ? "fix-card" : ""} ${entry.message.includes("Merge branch") ? "merge-card" : ""}`}
          >
            <img src={entry.avatar} alt="Author's avatar" class="avatar" />
            <div class="commit-info">
              <div class="commit-date">
                {entry.author} -{" "}
                {entry.date.toLocaleDateString("en", { dateStyle: "medium" })}
              </div>
              <div class="commit-message">
                {entry.message}
                {entry.message.includes("bump") && (
                  <span class="bump-icon">ðŸš€</span>
                )}
              </div>
            </div>
          </div>
        </a>
      ))
    }
  </div>
</StarlightPage>

<style>
  .commit-list a {
    text-decoration: none;
    color: inherit;
  }
  .commit-list {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .commit-card {
    border: 1px solid #ccc;
    border-radius: 8px;
    padding: 0.5rem;
    display: flex;
    align-items: center;
    transition:
      transform 0.2s,
      box-shadow 0.2s;

    &&:hover {
      transform: scale(1.02);
      cursor: pointer;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }
  }
  .bump-card {
    border-color: rgb(255, 184, 41);
  }

  .feat-card {
    border-color: #84b6eb;
  }

  .fix-card {
    border-color: #84b6eb;
  }

  .merge-card {
    border-color: var(--sl-color-hairline);
    font-size: 0.8rem;
    height: 75px;

    && .avatar {
      display: none;
    }

    && .commit-date {
      font-size: 0.8rem;
      margin: 0;
    }

    && .commit-message {
      margin: 0 !important;
    }
  }

  .avatar {
    width: 50px;
    height: 50px;
    border-radius: 50%;
    margin-right: 1rem;
  }

  .commit-info {
    flex: 1;
  }

  .commit-date {
    font-size: 0.9rem;
    color: #666;
  }

  .commit-message {
    font-size: 1rem;
    margin: 0.2rem 0 !important;
  }

  .bump-icon {
    margin-left: 0.5rem;
    color: #ff9800;
  }
</style>
